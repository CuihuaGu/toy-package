{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["dom", "es2018"],
    "removeComments": false,
    "declaration": true,
    "sourceMap": true,

    "strict": true,
    "noImplicitAny": false,

    "baseUrl": ".",
    "outDir": "./lib",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["./src/**/*"]
}
